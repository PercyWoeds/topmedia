<p id="notice"><%= notice %></p>

<h1>Medios </h1>

<table>
  <thead>
    <tr>
      <th>Razon Social</th>
      <th>Tipo Medio</th>
      <th>Estacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medios.each do |medio| %>
      <tr>
        <td><%= medio.descrip %></td>
        <td><%= medio.grupo %></td>
        <td><%= medio.estacion %></td>
        <td><%= link_to 'Ver', medio %></td>
        <td><%= link_to 'Editar', edit_medio_path(medio) %></td>
        <td><%= link_to 'Eliminar', medio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Medio', new_medio_path %>


<%= link_to "CSV", medios_path(format: "csv") %> |

<%= link_to "Excel", medios_path(format: "xls") %>


<br>

<h2>Importar Archivo  *.csv"</h2>

<%= form_tag import_medios_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar " %>
<% end %>
